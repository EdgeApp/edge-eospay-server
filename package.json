    "type": "git",
    "url": "git+ssh://git@github.com/Airbitz/edge-auth-server.git"
  },
  "keywords": [
    "Edge",
    "Wallet",
    "Airbitz",
    "Bitcoin",
    "Ethereum",
    "Blockchain"
  ],
  "author": "Paul Puey <paul@airbitz.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Airbitz/edge-auth-server/issues"
  },
  "homepage": "https://github.com/Airbitz/edge-auth-server#readme",
  "dependencies": {
    "biggystring": "^1.0.3",
    "body-parser": "~1.0.1",
    "cors": "^2.8.3",
    "es6-promisify-all": "^0.1.0",
    "express": "~4.0.0",
    "jsonschema": "^1.1.1",
    "nano": "^6.2.0",
    "node-fetch": "^1.7.2",
    "promisify-node": "^0.4.0",
    "random-js": "^1.0.8",
    "sprintf-js": "^1.1.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-flow": "^6.23.0",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "eslint-plugin-flowtype": "^2.34.1",
    "flow-bin": "^0.49.1",
    "husky": "^0.14.3",
    "json-loader": "^0.5.4",
    "mocha": "^2.4.5",
    "nyc": "^6.0.0",
    "rollup": "^0.43.0",
    "rollup-plugin-babel": "^2.7.1",
    "standard": "^10.0.2"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  },
  "scripts": {
    "precommit": "npm run build",
    "flow": "flow",
    "webpack": "webpack",
    "rollup": "rollup -c && rollup -c rollup.config.checkServers.js",
    "updot": "updot",
    "start": "node lib/indexInfo.js",
    "build": "npm run rollup",
    "built": "npm run build && npm run test",
    "cover": "nyc --reporter=lcov --reporter=text --reporter=html --extension .js npm test",
    "lint:fix": "standard 'src/**/*.js' 'test/**/*.js' --fix",
    "lint": "standard 'src/**/*.js' 'test/**/*.js' && npm run flow",
    "prepare": "npm run build",
    "test": "npm run lint && mocha"
  }
